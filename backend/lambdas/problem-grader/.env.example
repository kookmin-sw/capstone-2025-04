# Environment variables for problem-grader

# DynamoDB table names
PROBLEMS_TABLE_NAME=Problems
SUBMISSIONS_TABLE_NAME=Submissions

# Step Functions State Machine ARN
GRADER_STATE_MACHINE_ARN=arn:aws:states:REGION:ACCOUNT_ID:stateMachine:YourGraderStateMachineName

# Fargate Task Definition ARN and Cluster details (Needed by Step Functions)
# These might be dynamically discovered or passed during deployment
CODE_RUNNER_TASK_DEFINITION_ARN=arn:aws:ecs:REGION:ACCOUNT_ID:task-definition/your-code-runner-task:1
ECS_CLUSTER_NAME=YourECSClusterName
SUBNET_IDS=subnet-xxxxxxxx,subnet-yyyyyyyy # Comma-separated subnet IDs for Fargate Task
SECURITY_GROUP_IDS=sg-zzzzzzzz # Comma-separated security group IDs for Fargate Task

# Optional: S3 bucket for large test cases or code storage
# DATA_BUCKET_NAME=your-grader-data-bucket 